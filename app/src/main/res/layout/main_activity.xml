<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_list_container"
            android:name=".ui.ListFragment"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintBottom_toTopOf="@+id/search_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:name=".ui.SearchFragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/fragment_list_container"
            app:layout_constraintTop_toBottomOf="@+id/fragment_list_container"
            tools:text="Sample text" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin_horizontal"
            android:layout_marginBottom="@dimen/fab_margin_vertical"
            android:clickable="true"
            android:contentDescription="Add unit"
            android:focusable="true"
            android:src="@android:drawable/ic_input_add"
            android:tint="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/search_container"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>