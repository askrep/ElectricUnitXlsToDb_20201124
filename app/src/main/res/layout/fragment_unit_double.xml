<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/unit_icon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_margin="@dimen/icon_margin"
        android:contentDescription="Image"
        android:src="@android:drawable/ic_menu_today"
        app:layout_constraintBottom_toBottomOf="@+id/unit_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/unit_title" />

    <TextView
        android:id="@+id/unit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:autofillHints="Unit title"
        android:inputType="text"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/unit_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Unit title" />

    <TextView
        android:id="@+id/unit_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:autofillHints="Unit description"
        android:inputType="text"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/unit_title"
        app:layout_constraintStart_toStartOf="@+id/unit_title"
        app:layout_constraintTop_toBottomOf="@+id/unit_title"
        tools:text="Unit description" />

</androidx.constraintlayout.widget.ConstraintLayout>